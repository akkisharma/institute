<p id="notice"><%= notice %></p>

<h1>Tutors</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>Doj</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutors.each do |tutor| %>
      <tr>
        <td><%= tutor.course.name %></td>
        <td><%= tutor.first_name %></td>
        <td><%= tutor.last_name %></td>
        <td><%= tutor.email %></td>
        <td><%= tutor.mobile %></td>
        <td><%= tutor.doj.to_time.strftime("%e-%m-%Y") %></td>
        <td><%= link_to 'Show', tutor %></td>
        <td><%= link_to 'Edit', edit_tutor_path(tutor) %></td>
        <td><%= link_to 'Destroy', tutor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

